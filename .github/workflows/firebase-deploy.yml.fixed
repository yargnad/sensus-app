name: Deploy Frontend to Firebase Hosting

on:
  push:
    branches:
      - main
  workflow_dispatch:  # Allow manual triggering

jobs:
  deploy_frontend:
    name: Deploy frontend
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm'
          cache-dependency-path: client/package-lock.json

      - name: Install dependencies (client)
        working-directory: ./client
        run: npm ci

      - name: Build client (production)
        working-directory: ./client
        env:
          # Set the API URL for the production build
          REACT_APP_API_URL: https://sensus-api-602409653611.us-central1.run.app
        run: npm run build

      - name: Deploy to Firebase Hosting
        env:
          FIREBASE_SERVICE_ACCOUNT: ${{ secrets.FIREBASE_SERVICE_ACCOUNT_SENSUS_APP_8DB18 }}
        run: |
          if [ -z "$FIREBASE_SERVICE_ACCOUNT" ]; then
            echo "❌ FIREBASE_SERVICE_ACCOUNT_SENSUS_APP_8DB18 secret is not set."
            echo "Please add it in: Settings > Secrets and variables > Actions"
            exit 1
          fi
          
          echo "📝 Writing service account to temporary file..."
          echo "$FIREBASE_SERVICE_ACCOUNT" > "$RUNNER_TEMP/firebase-sa.json"
          
          echo "📦 Installing firebase-tools..."
          npm install -g firebase-tools
          
          echo "🚀 Deploying to Firebase Hosting..."
          cd client
          export GOOGLE_APPLICATION_CREDENTIALS="$RUNNER_TEMP/firebase-sa.json"
          firebase deploy --only hosting --non-interactive --project sensus-app-8db18
          
          echo "✅ Deployment complete!"
          echo "🌐 Site: https://sensus.yargnad.com"
